<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layoutDirection="rtl">

    <LinearLayout
        android:id="@+id/ready_factor_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ready_factor_product_title"
            android:layout_width="342dp"
            android:layout_height="51.32dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button_2"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/invoice_detail_item_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="لوله پلی اتیلن سایز 160 میلی لیتر"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/invoice_detail_item_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <LinearLayout
            android:layout_width="342dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_button_2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/invoice_detail_item_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingTop="2dp"
                android:paddingRight="8dp"
                android:text="دارای 10 سال بیمه"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="9dp"
            android:gravity="center">

            <TextView
                android:layout_width="168dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/round_button_1"
                android:gravity="center"
                android:text="قیمت هر واحد"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/invoice_detail_item_price_per_unit"
                android:layout_width="168dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/round_button_1"
                android:gravity="center"
                android:text="123000"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="9dp"
            android:gravity="center">

            <TextView
                android:layout_width="168dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/round_button_1"
                android:gravity="center"
                android:text="قیمت کل"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/invoice_detail_item_total_price"
                android:layout_width="168dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/round_button_1"
                android:gravity="center"
                android:text="5346000"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>