<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_category_sub_views"
    android:layout_marginTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/pipes_and_faucets"
        android:layout_width="342dp"
        android:layout_height="51.32dp"
        android:background="#939598"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/category_item_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="لوله و اتصالات و شیرآلات آب"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="23sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/category_sub_root_view"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pipes_and_faucets">

        <LinearLayout
            android:id="@+id/sub_pipes_and_faucets1"
            android:layout_width="342dp"
            android:layout_height="51.32dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/round_button_1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/category_item_pressure_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:text="فشار"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp"
             />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/sub_pipes_and_faucets2"
            android:layout_width="342dp"
            android:layout_height="51.32dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/round_button_1"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub_pipes_and_faucets1">
            <TextView
                android:id="@+id/category_item_vahed_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:text="واحد"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/sub_pipes_and_faucets3"
            android:layout_width="342dp"
            android:layout_height="51.32dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/round_button_1"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub_pipes_and_faucets2">
            <TextView
                android:id="@+id/category_item_amount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:text="مقدار"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sub_pipes_and_faucets4"
            android:layout_width="342dp"
            android:layout_height="51.32dp"
            android:layout_marginTop="12dp"
            android:background="#939598"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub_pipes_and_faucets3">

            <TextView
                android:id="@+id/sub_category_item_txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="تصویر و اطلاعات فنی این محصول ..."
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sub_pipes_and_faucets5"
            android:layout_width="342dp"
            android:layout_height="30.79dp"
            android:layout_marginTop="12dp"
            android:background="#939598"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub_pipes_and_faucets4">


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>