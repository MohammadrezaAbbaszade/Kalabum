<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/signup_phone_number_edit_txt"
        android:layout_width="348dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/phonenumber_edittext_round_shape"
        android:hint="شماره تلفن همراه"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_imageView" />



    <EditText
        android:id="@+id/signup_first_number_edit_txt"
        android:layout_width="348dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/phonenumber_edittext_round_shape"
        android:hint="نام"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_phone_number_edit_txt" />
    <EditText
        android:id="@+id/signup_last_number_edit_txt"
        android:layout_width="348dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/phonenumber_edittext_round_shape"
        android:hint="نام خانوادگی"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_first_number_edit_txt" />
    <EditText
        android:id="@+id/signup_password_edit_txt"
        android:layout_width="348dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/phonenumber_edittext_round_shape"
        android:hint="رمز عبور"
        android:layoutDirection="rtl"
        android:maxLength="20"
        android:maxLines="1"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_last_number_edit_txt" />


    <Button
        android:id="@+id/sign_up_btn2"
        android:layout_width="184dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:background="#00B14F"
        android:gravity="center"
        android:paddingRight="8dp"
        android:text="ثبت نام"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_password_edit_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>